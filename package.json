{
  "name": "medusa-module-smtp",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Luke Sims (https://lukesims.com)",
  "description": "SMTP notification provider for Medusa",
  "keywords": [
    "medusa",
    "smtp",
    "email",
    "notification",
    "module",
    "plugin",
    "provider"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lukesims/medusa-module-smtp"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!dist/**/__mocks__",
    "!dist/**/__fixtures__"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest src",
    "test:integration": "jest tests/integration",
    "build": "rimraf dist && tsc --build ./tsconfig.json",
    "watch": "tsc --watch",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check . !.docker/volumes",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write . !.docker/volumes",
    "prepare": "yarn build"
  },
  "dependencies": {
    "nodemailer": "^6.9.16"
  },
  "peerDependencies": {
    "@medusajs/framework": "^2.0.0"
  },
  "devDependencies": {
    "@medusajs/framework": "^2.1.1",
    "@mikro-orm/core": "5.9.7",
    "@mikro-orm/migrations": "5.9.7",
    "@mikro-orm/postgresql": "5.9.7",
    "@swc/core": "^1.7.40",
    "@swc/jest": "^0.2.36",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.16",
    "awilix": "^8.0.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "pg": "^8.13.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "packageManager": "yarn@4.5.3"
}
